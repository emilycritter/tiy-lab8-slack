<div class="container">
  <h1>Sign In</h1>

  <%= form_tag do %>
    <div class="form-group">
      <%= label_tag :email %>
      <%= email_field_tag :email %>
    </div>

    <div class="form-group">
      <%= label_tag :password %>
      <%= password_field_tag :password %>
    </div>

    <div class="form-group">
      <%= submit_tag "Sign In", class: "btn btn-default"%>
      or
      <%= link_to 'Sign Up', new_user_path %>
    </div>
  <% end %>

</div>
