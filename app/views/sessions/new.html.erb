<div class="user">
  <%= image_tag("/assets/home_background.jpg", class: "background-image")%>

  <div class="thumbnail" id="new-session">
    <h2>Sign In</h2>
    <br>
    <h4>Enter your email and password.</h4>

    <%= form_tag do %>
      <div class="form-group">
        <!-- <%= label_tag :email %> -->
        <%= email_field_tag :email, placeHolder="you@domain.com" %>
      </div>

      <div class="form-group">
        <!-- <%= label_tag :password %> -->
        <%= password_field_tag :password, placeHolder="password" %>
      </div>

      <div class="form-group">
        <%= submit_tag "Sign In", class: "btn btn-default"%>
        <div class="">
          <h4><%= link_to 'Sign Up', new_user_path %></h4>
        </div>
      </div>
    <% end %>
  </div>
</div>
