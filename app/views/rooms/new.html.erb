<div class="options-page">
  <div class="thumbnail">

    <div class="header">
      <h1>New Room | <small><%= link_to "Return to Rooms List", rooms_path %></small></h1>
    </div>

    <hr>
    <div class="form">
      <%= form_for @room do |f| %>

        <div class="form-group">
          <%= f.label :name, style: "display: none;" %>
          <%= f.text_field :name, class: "form-control", placeHolder: "room name" %>
          <% if @room.errors[:name].any? %>
            <span class="help-block"> name <%= @room.errors[:name].join(", ") %> </span>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.label :description, style: "display: none;" %>
          <%= f.text_field :description, class: "form-control", placeHolder: "room description" %>
          <% if @room.errors[:description].any? %>
            <span class="help-block"> name <%= @room.errors[:description].join(", ") %> </span>
          <% end %>
        </div>

        <div class="form-group">
          <%= f.submit class: "btn btn-primary" %>
        </div>

      <% end %>
    </div>

  </div>
</div>
